@model Student
@{
    ViewData["Title"] = "Şagirdi dəyiş";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Mövcud şagirdi dəyiş</h2>
    </div>

    <form method="POST" enctype="multipart/form-data" asp-controller="Student" asp-action="EditStudent">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.StudentNo">Şagirdin nömrəsi</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.StudentNo" placeholder="Şagirdin nömrəsini daxil edin">
                <span asp-validation-for="@Model.StudentNo" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.StudentName">Şagirdin adı</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.StudentName" placeholder="Şagirdin adını daxil edin">
                <span asp-validation-for="@Model.StudentName" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="@Model.StudentSurname">Şagirdin soyadı</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.StudentSurname" placeholder="Şagirdin soyadını daxil edin">
                <span asp-validation-for="@Model.StudentSurname" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Class">Sinifi</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.Class" placeholder="Sinifi daxil edin">
                <span asp-validation-for="@Model.Class" class="alert-danger"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-lg btn-success p-2" value="Dəyiş" />
    </form>
</div>

